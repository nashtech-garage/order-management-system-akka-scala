<configuration>
    <!-- Service name property -->
    <property name="SERVICE_NAME" value="api-gateway" />
    <property name="LOG_PATH" value="${LOG_PATH:-logs}" />

    <!-- Console Appender for Docker/Kubernetes -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [${SERVICE_NAME}] [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

